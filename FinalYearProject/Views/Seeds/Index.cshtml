@model IEnumerable<FinalYearProject.Models.Seed>

@{
    ViewData["Title"] = "Seed Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Seed
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-search"></i> Search & Filter
        </h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index" id="searchForm" class="row g-3">
            <div class="col-md-4">
                <label for="searchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                       value="@Context.Request.Query["searchTerm"]" placeholder="Search by name or category...">
            </div>

            <div class="col-md-3">
                <label for="approvalStatus" class="form-label">Approval Status</label>
                <select class="form-select" id="approvalStatus" name="approvalStatus">
                    <option value="">All Status</option>
                    <option value="true" selected='@(Context.Request.Query["approvalStatus"] == "true")'>Approved</option>
                    <option value="false" selected='@(Context.Request.Query["approvalStatus"] == "false")'>Pending</option>
                </select>
            </div>

            <div class="col-md-3">
                <label for="minStock" class="form-label">Stock Range</label>
                <div class="input-group">
                    <input type="number" class="form-control" id="minStock" name="minStock"
                           value="@Context.Request.Query["minStock"]" placeholder="Min" min="0">
                    <input type="number" class="form-control" id="maxStock" name="maxStock"
                           value="@Context.Request.Query["maxStock"]" placeholder="Max" min="0">
                </div>
            </div>

            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-filter"></i> Apply Filters
                    </button>
                </div>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Context.Request.Query["searchTerm"]) ||
                !string.IsNullOrEmpty(Context.Request.Query["approvalStatus"]) ||
                !string.IsNullOrEmpty(Context.Request.Query["minStock"]) ||
                !string.IsNullOrEmpty(Context.Request.Query["maxStock"]))
        {
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-times"></i> Clear Filters
                </a>
            </div>
        }
    </div>
</div>

<!-- Results Count -->
@if (Model.Any())
{
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <span>
            <i class="fas fa-info-circle"></i> Showing @Model.Count() seed(s)
            @if (!string.IsNullOrEmpty(Context.Request.Query["searchTerm"]) ||
                    !string.IsNullOrEmpty(Context.Request.Query["approvalStatus"]) ||
                    !string.IsNullOrEmpty(Context.Request.Query["minStock"]) ||
                    !string.IsNullOrEmpty(Context.Request.Query["maxStock"]))
            {
                <span>(filtered results)</span>
            }
        </span>
    </div>
}

<!-- Seeds Table -->
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-success">
                <tr>
                    <th><i class="fas fa-seedling"></i> Name</th>
                    <th><i class="fas fa-layer-group"></i> Category</th>
                    <th><i class="fas fa-user-tie"></i> Agent</th>
                    <th><i class="fas fa-tag"></i> Price/kg</th>
                    <th><i class="fas fa-check-circle"></i> Approval</th>
                    <th><i class="fas fa-boxes"></i> Stock (Kgs)</th>
                    <th><i class="fas fa-calendar-alt"></i> Expiry Date</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody class="bg-color-azure">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            @if (item.Category != null)
                            {
                                <span class="badge bg-info">@item.Category.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            @if (item.Agent != null)
                            {
                                <span class="badge bg-secondary">@item.Agent.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            @if (item.Approval)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                        <td>@item.ExpiryDate.ToString("d")</td>                        
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Details
                                </a> *@
                                @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a> *@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        <i class="fas fa-exclamation-triangle"></i> No seeds found.
        @if (!string.IsNullOrEmpty(Context.Request.Query["searchTerm"]) ||
            !string.IsNullOrEmpty(Context.Request.Query["approvalStatus"]) ||
            !string.IsNullOrEmpty(Context.Request.Query["minStock"]) ||
            !string.IsNullOrEmpty(Context.Request.Query["maxStock"]))
        {
            <span>Try adjusting your search criteria.</span>
        }
        else
        {
            <span>
                <a asp-action="Create" class="alert-link">Add your first seed</a> to get started.
            </span>
        }
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit form when filters change
            const filterSelects = document.querySelectorAll('#approvalStatus, #minStock, #maxStock');
            filterSelects.forEach(select => {
                select.addEventListener('change', function() {
                    document.getElementById('searchForm').submit();
                });
            });

            // Clear individual filter fields
            const clearFilter = function(fieldId) {
                document.getElementById(fieldId).value = '';
                document.getElementById('searchForm').submit();
            };
        });
    </script>
}